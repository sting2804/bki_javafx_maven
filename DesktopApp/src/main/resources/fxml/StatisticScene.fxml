<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane id="AnchorPane" prefHeight="431.0" prefWidth="892.0" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.privat.bki.desktopapp.gui.statistic.StatisticWindowController">
    <Label alignment="TOP_CENTER" layoutX="116.0" layoutY="-2.0" nodeOrientation="LEFT_TO_RIGHT" text="Статистика"
           textAlignment="CENTER" AnchorPane.leftAnchor="1.0" AnchorPane.rightAnchor="1.0" AnchorPane.topAnchor="1.0">
        <font>
            <Font size="21.0"/>
        </font>
        <padding>
            <Insets left="10.0"/>
        </padding>
    </Label>

    <GridPane alignment="CENTER_RIGHT" layoutX="571.0" layoutY="45.0" prefHeight="371.0" prefWidth="307.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="217.0" minWidth="10.0" prefWidth="139.0"/>
            <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="184.0" minWidth="10.0" prefWidth="168.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Label text="Название банка" GridPane.rowIndex="1"/>
        <ComboBox fx:id="bankNameComboBox" editable="true" prefHeight="26.0" prefWidth="204.0"
                  promptText="Например privat" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Button fx:id="applyButton" alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false"
                onAction="#drawChart" text="Статистика" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Label text="Спрогнозировать на:" GridPane.rowIndex="3"/>
        <TextField fx:id="yearTextField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Button fx:id="applyPrognosButton" alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false"
                onAction="#drawPrognosChart" text="Прогноз" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    </GridPane>
    <Pane fx:id="panel" layoutX="14.0" layoutY="45.0" prefHeight="370.0" prefWidth="535.0"
          style="-fx-background-color: #999999;"/>
