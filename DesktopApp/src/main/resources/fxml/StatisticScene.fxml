<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.AreaChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane id="AnchorPane" prefHeight="339.0" prefWidth="892.0" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.privat.bki.desktopapp.gui.statistic.StatisticWindowController">
    <children>
        <Label alignment="TOP_CENTER" layoutX="116.0" layoutY="-2.0" nodeOrientation="LEFT_TO_RIGHT" text="Статистика"
               textAlignment="CENTER" AnchorPane.leftAnchor="1.0" AnchorPane.rightAnchor="1.0"
               AnchorPane.topAnchor="1.0">
            <font>
                <Font size="21.0"/>
            </font>
            <padding>
                <Insets left="10.0"/>
            </padding>
        </Label>
        <AreaChart fx:id="areaChart" layoutX="14.0" layoutY="32.0" prefHeight="307.0" prefWidth="500.0">
            <xAxis>
                <NumberAxis id="xAxis1" side="BOTTOM"/>
            </xAxis>
            <yAxis>
                <NumberAxis id="yAxis1" side="BOTTOM"/>
            </yAxis>
        </AreaChart>
        <GridPane layoutX="568.0" layoutY="45.0" prefHeight="264.0" prefWidth="307.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="217.0" minWidth="10.0" prefWidth="123.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="184.0" minWidth="10.0" prefWidth="184.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="Название банка"/>
                <ComboBox fx:id="bankNameComboBox" editable="true" prefHeight="26.0" prefWidth="204.0"
                          promptText="Например privat" GridPane.columnIndex="1"/>
                <Button fx:id="applyButton" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#drawChart"
                        text="Выполнить" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </children>
        </GridPane>
    </children>
</AnchorPane>
