<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:jee="http://www.springframework.org/schema/jee"
       xsi:schemaLocation="http://www.springframework.org/schema/beans  http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
       http://www.springframework.org/schema/context  http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee.xsd"
       xmlns:context="http://www.springframework.org/schema/context">

    <context:component-scan base-package="com.privat.bki.apiserver.spring.services"/>

    <jee:jndi-lookup id="dataSource" resource-ref="true" jndi-name="jdbc/Test" expected-type="javax.sql.DataSource"/>
    <!--<bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource"
        p:driverClassName="net.sourceforge.jtds.jdbc.Driver"
        p:url="jdbc:sybase:Tds:aseserver:5000/privat_db"
        p:username="privat"
        p:password="privat"/>-->

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate">
        <constructor-arg type="javax.sql.DataSource" ref="dataSource"/>
    </bean>
</beans>